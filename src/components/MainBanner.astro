---
import { WebsiteConfig } from "../config";
---
<div class="p-suru--fan-bottom">
    <div class="row--75-25">
      <div class="col">
        <h1>{WebsiteConfig.siteTitle}</h1>
        <h2>{WebsiteConfig.mainBanner.dates}</h2>
        <h2>{WebsiteConfig.mainBanner.venue}</h2>
        <p>{WebsiteConfig.mainBanner.description}</p>
        <p><small>{WebsiteConfig.mainBanner.footnote}</small></p>
        {WebsiteConfig.mainBanner.buttons.map((buttonConfig)=>(
            <a href={buttonConfig.link}>
                <button class={buttonConfig.class}>
                    {buttonConfig.label}
                </button>
            </a>
        ))}
      </div>
      <div class="col">
        <img src={WebsiteConfig.mainBanner.logo.src} style="padding-top: 30px; max-width: 250px;"/>
      </div>
    </div>
  </div>